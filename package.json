{
  "name": "chainabstractionlayer",
  "private": "true",
  "keywords": [
    "blockchain",
    "bitcoin",
    "ethereum",
    "client"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "scripts": {
    "cover": "nyc --reporter=html --reporter=text npm test",
    "lint": "standard src/* test/*",
    "test": "NODE_ENV=test mocha $npm_package_options_mocha",
    "build": "rollup -c",
    "build:prod": "NODE_ENV=production BABEL_ENV=production npm run build",
    "build:docs": "esdoc"
  },
  "dependencies": {
    "ajv": "^6.5.2",
    "axios": "^0.18.0",
    "json-bigint": "^0.3.0",
    "lodash": "^4.0.0",
    "regenerator-runtime": "^0.12.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "browserify": "^16.2.2",
    "chai-as-promised": "^7.1.1",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "mocha": "^5.2.0",
    "nock": "^9.3.0",
    "nyc": "^12.0.2",
    "pre-commit": "^1.2.2",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-uglify": "^4.0.0",
    "should": "^13.2.1",
    "standard": "^11.0.1"
  },
  "engines": {
    "node": ">=8"
  },
  "nyc": {
    "include": [
      "src/"
    ],
    "instrument": false,
    "report-dir": "./coverage",
    "sourceMap": false
  },
  "options": {
    "mocha": "--require babel-register --require babel-polyfill --timeout 20000 --recursive --require should"
  },
  "pre-commit": [
    "lint",
    "build:prod",
    "build:docs",
    "test"
  ]
}
