{
  "name": "chainabstractionlayer",
  "private": "true",
  "keywords": [
    "blockchain",
    "bitcoin",
    "ethereum",
    "client"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "scripts": {
    "cover": "nyc --reporter=html --reporter=text npm test",
    "lint": "standard src/**/*.js test/**/*.js",
    "test": "NODE_ENV=test mocha $npm_package_options_mocha",
    "build:node": "rollup -c",
    "build:browser": "webpack --config webpack.browser.config.js",
    "build:node:prod": "NODE_ENV=production BABEL_ENV=production npm run build:node",
    "build:browser:prod": "NODE_ENV=production BABEL_ENV=production npm run build:browser",
    "build:docs": "esdoc"
  },
  "dependencies": {
    "@ledgerhq/hw-app-btc": "^4.20.0",
    "@ledgerhq/hw-app-eth": "^4.19.0",
    "@ledgerhq/hw-transport-node-hid": "^4.19.1",
    "@ledgerhq/hw-transport-u2f": "^4.20.0",
    "ajv": "^6.5.2",
    "axios": "^0.18.0",
    "json-bigint": "^0.3.0",
    "lodash": "^4.0.0",
    "regenerator-runtime": "^0.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@babel/polyfill": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/register": "^7.0.0-beta.54",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-lodash": "^3.3.4",
    "browserify": "^16.2.2",
    "chai-as-promised": "^7.1.1",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "lodash-webpack-plugin": "^0.11.5",
    "mocha": "^5.2.0",
    "nock": "^9.3.0",
    "nyc": "^12.0.2",
    "pre-commit": "^1.2.2",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^4.0.0-beta.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-uglify": "^4.0.0",
    "should": "^13.2.1",
    "standard": "^11.0.1",
    "webpack": "^4.16.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0"
  },
  "engines": {
    "node": ">=8"
  },
  "nyc": {
    "include": [
      "src/"
    ],
    "instrument": false,
    "report-dir": "./coverage",
    "sourceMap": false
  },
  "options": {
    "mocha": "--require @babel/register --require @babel/polyfill --timeout 20000 --recursive --require should"
  },
  "pre-commit": [
    "lint",
    "build:node:prod",
    "build:browser:prod",
    "test"
  ]
}
